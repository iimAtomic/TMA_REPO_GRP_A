{% extends 'base.html.twig' %}

{% block title %}Hello PersonalityController!{% endblock %}

{% block body %}
    <h1>Personnalités</h1>
    {% if is_granted('ROLE_ADMIN') %}
     <h3> <a href=" {{ path('app_personality') }}">Ajouté une personnalité</a></h3>
    {% endif %}
 {%for i in perso %}
    <div id="container">
        <p id="Name"> <i class="fa fa-user" aria-hidden="true"></i>{{ i.name }}</p>
        <p id="age">
            <span>  {{ i.bornAt|date('d/m/Y')}}  -  {{ i.dieAt|date('d/m/Y') }}</span>
            <span style=" color: #1f8c74; "> age : {{i.dieAt|date('Y') - i.bornAt|date('Y')}}</span>
        </p>
        <div id="description">
            <span style="font-weight: bold ; font-size: 20px"> Description : </span>
           {{ i.description }}
        </div>
    </div>
    {% endfor %}

    <style>

        #Name{
            font-size: 30px;
            font-weight: bold;
            color: #1f8c74;

        }

       #container{
           margin-top: 30px;
           width: 710px;
           display: flex;
           flex-direction: column;
           background: #FCFCFC;
           box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
           border-radius: 4px;
           padding: 10px;

       }
       #age{
           display: flex;
           flex-direction: row;
           justify-content: space-between;
           width: 300px;
           color: rgba(2, 2, 2, 0.51);
           margin-top: -40px;
           font-size: 18px ;
       }

       #description{
           width: 700px;
           display: flex;
           flex-direction: column;
           word-wrap: break-word;
       }


    </style>

{% endblock %}

